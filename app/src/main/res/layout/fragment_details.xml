<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#DDDDDD"
        tools:context=".DetailsFragment">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="#6E6E6E"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Contact Details"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nameShowTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ibrahim Khan"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/callBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/input_shap"
                android:src="@drawable/call_icon"/>

            <ImageView
                android:id="@+id/smsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:background="@drawable/input_shap"
                android:src="@drawable/sms_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emailShowTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                tools:text="aitvetibrahim@gmail.com"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/emailBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/input_shap"
                android:src="@drawable/email_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mapShowTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                tools:text="Jatrabari Dahak"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mapBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/input_shap"
                android:src="@drawable/location_icon"/>
        </LinearLayout>
    </LinearLayout>
</layout>